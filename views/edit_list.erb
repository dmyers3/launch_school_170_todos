<section id="todos">
  <header>
    <h2>Editing "<%= @name %>"</h2>
    <ul>
      <li>
        <form action="/lists/<%= params[:id] %>/destroy" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
    
  </header>
</section>

<form action="/lists/:id" method="post">
  <dl>
    <dt>
      <label for="list_name">Edit the name of your list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="<%= @name %>" type="text" value="<%= params[:list_name] || @name %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:id] %>">Cancel</a>
  </fieldset>
</form>

