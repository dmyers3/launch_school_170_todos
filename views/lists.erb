<ul id="lists">
  <% sort_lists(@lists).each do |list| %>
    <li class="<%= format_complete(list) %>">
      <a href="/lists/<%= find_list_index(list[:name]) %>">
        <h2><%= list[:name] %></h2> 
        <p><%= todos_remaining(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>