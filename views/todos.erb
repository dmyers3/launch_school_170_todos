<section id="todos" class="<%= format_complete(@list) %>">
  <header>
    <h2><%= @name %></h2>
    <ul>
      <li>
        <form action="/lists/<%= params[:id] %>/check_all" method="post">
          <button class="check" type="submit">Complete All</button>
        </form>
      </li>
      <li>
        <a class="edit" href="/lists/<%= params[:id] %>/edit">Edit List</a>
      </li>
    </ul>
  </header>
  
  <ul id="todos">
  <% sort_todos(@todos).each do |todo| %>
    <% if todo[:completed] == true %>
      <li class="complete">
    <% else %>
      <li>
    <% end %>
      <form action="/lists/<%= params[:id] %>/todos/<%= find_todo_index(todo[:name]) %>/toggle" method="post" class="check">
        <input type="hidden" name="completed" value="<%= !todo[:completed] %>" />
        <button type="submit">Complete</button>
      </form>
      <h3><%= todo[:name] %></h3>
      <form action="/lists/<%= params[:id] %>/todos/<%= find_todo_index(todo[:name]) %>/destroy" method="post" class="delete">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
  </ul>
</section>



<form action="/lists/<%= params[:id] %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" placeholder="Something to do" type="text" value="<%= params[:todo] || "" %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>


<% content_for :header_links do %>
  <a class="list" href="/lists">All Lists</a>
<% end %>
